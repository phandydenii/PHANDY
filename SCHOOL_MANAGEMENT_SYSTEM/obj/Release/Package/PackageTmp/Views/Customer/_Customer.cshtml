<form id="employee" method="post" enctype="multipart/form-data">

    <div class="modal fade" data-backdrop="static" data-keyboard="fale" id="customerModel" tabindex="-1" role="dialog" aria-labelledby="customerModel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div id="loadingGif"></div>
                <div class="modal-header">
                    <button type="button" class="btn-danger btn-xs pull-right" data-dismiss="modal" aria-hidden="true">Close</button>
                    <b class="modal-title" style="color:darkblue">គ្រប់គ្រងអតិថិជន</b>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <img class="center img-responsive img-thumbnail" id="photo" src="~/Images/no_image.png" />
                            </div>
                            <div class="form-group">
                                <label>ជ្រើសរើសរូបថត</label>
                                <input onchange="readURL(this);" type="file" id="file" style="width:100%;" />
                                <input type="hidden" value="" id="file_old" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <input type="text" hidden value="" />
                            <input id="id" name="id" type="text" value="" class="form-control input-sm hidden" placeholder="Enter employeeId" />

                            <div class="form-group">
                                <label for="name">ឈ្មោះ</label>
                                <input id="name" name="name" type="text" value="" class="form-control input-sm" placeholder="Enter Employee Name" />

                            </div>
                            <div class="form-group">
                                <label for="sex">ភេទ</label>
                                <select class="form-control input-sm" id="sex">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>None</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="customertype">ប្រភេទអតិថិជន</label>
                                <select class="form-control input-sm" id="customertype">
                                    <option>ហាង</option>
                                    <option>ផ្ទាល់ខ្លួន</option>
                                    <option>None</option>
                                </select>
                            </div>
                            

                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="showroomid">សាខា</label>
                                <select class="form-control input-sm" id="showroomid">
                                    @foreach (var pos in Model.Showrooms)
                                    {
                                        <option value=@pos.id>@pos.name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="phone">លេខទូរស័ព្ទ</label>
                                <input id="phone" name="phone" type="text" value="" class="form-control input-sm" placeholder="000 000 000" />

                            </div>
                            <div class="form-group">
                                <label for="identityno">លេខអត្តសណ្ណាណប័ណ្ណ</label>
                                <input id="identityno" name="identityno" type="text" value="" class="form-control input-sm" />

                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-lg-offset-4">
                                <label for="address">អាស័យដ្ឋាន</label>
                                <input id="address" name="address" type="text" value="" class="form-control input-sm" />

                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-8 col-lg-offset-4">
                                <button type="button" id="btnCus" onclick="CustomerAction();" class="btn btn-primary btn-block btn-sm">Add New</button>
                            </div>
                        </div>
                    </div>

                    
                    
                </div>
            </div>
        </div>
    </div>
</form>
