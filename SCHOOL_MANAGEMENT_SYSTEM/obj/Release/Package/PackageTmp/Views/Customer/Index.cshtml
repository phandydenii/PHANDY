
@{
    ViewBag.Title = "Manage Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="loadingGif"></div>

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <button onclick="ClickAddnewCustomer()" class="btn-success btn-xs pull-right" type="button" data-toggle="modal" data-target="#customerModel" style="margin-right:5px;"><span class="glyphicon glyphicon-plus-sign"></span> បង្កើតអតិថិជនថ្មី</button>
            <h5 class="modal-title">Manage Customer</h5>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-inline">
                        <label for="displayshowroom">បុគ្គលិកគ្រប់ផ្នែក:</label>
                        <select class="form-control" id="displayshowroom">
                            <option>---Select Showroom----</option>
                            @foreach (var depart in Model.Showrooms)
                            {
                                <option value="@depart.id">@depart.name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="row" style="overflow:auto">
                <div class="col-md-12">
                    <table id="tableCustomer" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                @*<th>ID</th>*@
                                <th>ឈ្មោះ</th>
                                <th>ភេទ</th>
                                <th>លេខទូរសព្ទ</th>
                                <th>អាស័យដ្ឋាន</th>
                                <th>អត្តសញ្ញាណប័ណ្ណ</th>
                                @*<td>រូបថត</td>*@
                                <th>ប្រភេទ</th>
                                @*<th>ស្ថានភាព</th>*@
                                @*<th>សាខា</th>*@
                                <th>សកម្មភាព</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        

    </div>
</div>



@Html.Partial("_Customer")
@Html.Partial("_Showroom")
@section scripts
{
    @Scripts.Render("~/Scripts/Functions/showroom.js")
    @Scripts.Render("~/Scripts/Functions/customer.js")
    @Scripts.Render("~/Scripts/moment.min.js")
}
