
@{
    ViewBag.Title = "Manage Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="loadingGif"></div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h4 style="color: darkblue;"><b>@Resources.Content.ManagePayment</b></h4>
        </div>
        <div class="col-md-6">
            <a class="btn btn-success btn-sm pull-right" style='margin-top:0px;margin-left:5px' data-toggle="modal" data-target="#exchangeModel"><span class='glyphicon glyphicon-usd'></span> អត្រាប្តូរប្រាក់</a>
            <a class="btn btn-success btn-sm pull-right" style='margin-top:0px' data-toggle="modal" data-target="#WEPriceModel"><span class='glyphicon glyphicon-usd'></span> តម្លៃទឹកភ្លើង</a>
        </div>
    </div>
    <hr />
    <div class="tab-pane fade active in" id="printinvoice">
        <br />
        <table id="tablePrintInvoice" style="width:100%" class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>លេខ</th>
                    <th>ឈ្មោះ</th>
                    <th>ថ្ងៃចូលស្នាក់នៅ</th>
                    <th>បន្ទប់លេខ</th>
                    <th>ប្រភេទបន្ទប់</th>
                    <th>សេវា</th>
                    <th>តម្លៃបន្ទប់</th>
                    <th>បង់ប្រាក់ខែបន្ទាប់</th>
                    <th style="width:15%">សកម្មភាព</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Html.Partial("_Payment")
@Html.Partial("_PrintNewInvoice")
@Html.Partial("_ExchangeRate")
@Html.Partial("_WEPrice")


@section scripts
{
    @Scripts.Render("~/Scripts/moment.min.js")
    @Scripts.Render("~/Scripts/Functions/invoice.js")
    @Scripts.Render("~/Scripts/Functions/pirntinvoice.js")
    @Scripts.Render("~/Scripts/Functions/exchangerate.js")
    @Scripts.Render("~/Scripts/Functions/weprice.js") 
}

