<form id="employees" method="post" enctype="multipart/form-data">

    <div class="modal fade" data-backdrop="static" data-keyboard="fale" id="employeeModel" tabindex="-1" role="dialog" aria-labelledby="employeeModel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div id="loadingGif"></div>
                <div class="modal-header">
                    <button type="button" class="btn-danger btn-xs pull-right" data-dismiss="modal" aria-hidden="true">Close</button>
                    <b class="modal-title" style="color:darkblue">Manage Employee</b>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <img class="center img-responsive img-thumbnail" id="employeeimg" src="~/Images/no_image.png" />
                            </div>
                            <div class="form-group">
                                <label>Upload Photo</label>
                                <input onchange="readURL(this);" type="file" id="file" style="width:100%;" />
                                <input type="hidden" value="" id="file_old"/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <input type="text" hidden value="" />
                            <input id="employeeId" name="employeeId" type="text" value="" class="form-control input-sm hidden" placeholder="Enter employeeId" />

                            <div class="form-group">
                                <label for="employeename">Employee Name</label>
                                <input id="employeename" name="employeename" type="text" value="" class="form-control input-sm" placeholder="Enter Employee Name" />

                            </div>

                            <div class="form-group">
                                <label for="employeenamekh">Employee NameKh</label>
                                <input id="employeenamekh" name="employeenamekh" type="text" value="" class="form-control input-sm" placeholder="Enter Employee Name in Khmer" />

                            </div>
                            <div class="form-group">
                                <label for="gender">Gender</label>
                                <select class="form-control input-sm" id="gender">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>None</option>
                                </select>
                            </div>

                           
                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input id="phone" name="phone" type="text" value="" class="form-control input-sm" placeholder="000 000 000" />

                            </div>
                            <div class="form-group">
                                <label for="maritalstatus">Marital Status</label>
                                <select class="form-control input-sm" id="maritalstatus">
                                    <option value="Single">Single</option>
                                    <option value="Married">Married</option>
                                </select>
                            </div>
                            

                        </div>

                        <div class="col-md-4">

                            <div class="form-group">
                                <label for="employeeDepartmentId">Department</label>
                                <select class="form-control input-sm" id="employeeDepartmentId">
                                    @foreach (var department in Model.Departments)
                                    {
                                        <option value=@department.Id>@department.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group" >
                                <label for="employeeBranchId">Branch</label>
                                <select class="form-control input-sm" id="employeeBranchId">
                                    @foreach (var branch in Model.Branchs)
                                    {
                                        <option value=@branch.Id>@branch.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="dob">Date of Birth</label>
                                <input id="dob" name="dob" type="date" value="" class="form-control js-date input-sm" placeholder="Date of Birth" />

                            </div>
                           
                            <div class="form-group">
                                <label for="pob">Place of Birth</label>
                                <input id="pob" name="pob" type="text" value="" class="form-control input-sm" placeholder="Place of Birth" />

                            </div>
                            <div class="form-group">
                                <label for="email">Email@example.com</label>
                                <input id="email" name="email" type="text" value="" class="form-control input-sm" placeholder="email@example.com" />

                            </div>
                            

                            @*<br />
                                <input id="status" name="status" type="checkbox" value="" class="select-item"/> Enable*@


                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 col-lg-offset-4">
                            <label for="address">Address</label>
                            <input id="address" name="address" type="text" value="" class="form-control input-sm" placeholder="Address" />
                        </div>
                    </div>

                    <hr />
                    <div class="row">
                        <div class="col-md-8 col-lg-offset-4">
                            <button type="button" id="btnEmployee" onclick="EmployeeAction();" class="btn btn-primary btn-block btn-sm">Add New</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>