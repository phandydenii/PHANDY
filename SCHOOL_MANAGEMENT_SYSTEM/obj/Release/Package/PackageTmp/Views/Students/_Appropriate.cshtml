                                @*<label for="illnessnote">illness Note</label>*@
                                <input id="illnessnote" name="illnessnote" type="text" value="" class="form-control input-sm" placeholder="Enter illness Note" />
                            </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="allergies" name="allergies" type="checkbox" value="" class="form-control-new input-sm" placeholder="Use to Allergies" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="allergies">Allergies ?</label>
                                </div>
                            </div>
                        </div>

                            <div class="form-group">
                                <label for="allergiesnote">Allergies Note</label>
                                <input id="allergiesnote" name="allergiesnote" type="text" value="" class="form-control input-sm" placeholder="Use to Study Note" />
                            </div>

                            <div class="form-group">
                                <label for="sufferinfor">Suffer Information</label>
                                <input id="sufferinfor" name="sufferinfor" type="text" value="" class="form-control input-sm" placeholder="Enter Sufferinformation" />
