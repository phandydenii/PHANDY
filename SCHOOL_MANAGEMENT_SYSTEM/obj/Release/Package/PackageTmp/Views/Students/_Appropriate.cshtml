                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="fears">Fears</label>
                                </div>
                            </div>
                        </div>
                            <div class="form-group">
                                @*<label for="fearsnote">Fears Note</label>*@
                                <input id="fearsnote" name="fearsnote" type="text" value="" class="form-control input-sm" placeholder="Enter Fears Note" />
                            </div>

                            <div class="form-group">
                                <label for="othernote">Other Note</label>
                                <input id="othernote" name="othernote" type="text" value="" class="form-control input-sm" placeholder="Other Note" />
                            </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="playsport" name="playsport" type="checkbox" value="" class="form-control-new input-sm" placeholder="Use to Playsport" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="playsport">Use to Playsport</label>
                                </div>
                            </div>
                        </div>
                            <div class="form-group">
                                @*<label for="playsportnote">Play Sport Note</label>*@
                                <input id="playsportnote" name="playsportnote" type="text" value="" class="form-control input-sm" placeholder="Enter Play Sport Note" />
                            </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="allowphoto" name="allowphoto" type="checkbox" value="" class="form-control-new input-sm" placeholder="Enter Allow Photo" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="allowphoto">Allow Photo</label>
                                </div>
                            </div>
                        </div>
