                            <input id="appstudentid" name="appstudentid" type="text" value="" class="form-control input-sm hidden" placeholder="StudentID" />
                            <label for="livewith">livewith Name</label>
                            <input id="livewith" name="livewith" type="text" value="" class="form-control input-sm" placeholder="Enter Live with's Name" />
                        </div>
                        <div class="form-group">
                            <label for="speakhome">Language Speak at home</label>
                            <input id="speakhome" name="speakhome" type="text" value="" class="form-control input-sm" placeholder="Enter Speak at home" />
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="speakenglish" name="speakenglish" type="checkbox" value="" class="form-control-new input-sm" placeholder="Speak English" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="speakenglish">Can Speak English</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="speakchinese" name="speakchinese" type="checkbox" value="" class="form-control-new input-sm" placeholder="Speak Chinese" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="speakchinese">Can speak Chinese</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="usetostudy" name="usetostudy" type="checkbox" value="" class="form-control-new input-sm" placeholder="Use to Study" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="usetostudy">Use to Study ?</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                @*<label for="usetostudynote">Use to Study Note</label>*@
                                <input id="usetostudynote" name="usetostudynote" type="text" value="" class="form-control input-sm" placeholder="Use to Study Note" />
                            </div>
                        </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="toilattrained" name="toilattrained" type="checkbox" value="" class="form-control-new input-sm" placeholder="Toilat Trained" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="toilattrained">Toilet Trained</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-2">
                                    <input id="illness" name="illness" type="checkbox" value="" class="form-control-new input-sm" placeholder="Enter illness" />
                                </div>
                                <div class="col-sm-10" style="padding-top:7px;">
                                    <label for="illness">illness</label>
                                </div>
