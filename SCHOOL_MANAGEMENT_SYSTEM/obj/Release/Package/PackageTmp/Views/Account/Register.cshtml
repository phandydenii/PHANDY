@model SCHOOL_MANAGEMENT_SYSTEM.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div style="margin-top:10px" class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title text-center">@Resources.Content.RegisterNewAccount</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>@Resources.Content.FullName</label>
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Enter your Fullname" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>@Resources.Content.Sex</label>
                            @Html.TextBoxFor(m => m.Sex, new { @class = "form-control", @placeholder = "Enter your Fullname" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>@Resources.Content.Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>@Resources.Content.Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>@Resources.Content.ConfirmPassword</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Enter confirm password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary btn-block" value="Register" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
