<form id="employees" method="post" enctype="multipart/form-data">

    <div class="modal fade" data-backdrop="static" data-keyboard="fale" id="studentModel" tabindex="-1" role="dialog" aria-labelledby="studentModel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div id="loadingGif"></div>
                <div class="modal-header">
                    <button type="button" class="btn-danger btn-xs pull-right" data-dismiss="modal" aria-hidden="true">Close</button>
                    <b class="modal-title" style="color:darkblue">Manage Students</b>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <img class="center img-responsive img-thumbnail" id="studentphoto" src="~/Images/no_image.png" />
                            </div>
                            <div class="form-group">
                                <label>Upload Photo</label>
                                <input onchange="readURL(this);" type="file" id="file" accept="image/png,image/jpg,image/jpeg" style="width:100%;" />
                                <input type="hidden" value="" id="file_old" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <input type="text" hidden value="" />
                            <input id="id" name="id" type="text" value="" class="form-control input-sm hidden" placeholder="Enter Id" />

                            <div class="form-group">
                                <label for="studentid">Student ID</label>
                                <input id="studentid" name="studentid" type="text" value="" class="form-control input-sm hidden" placeholder="Enter Student ID" />
                                <input id="stuid" name="stuid" type="text" value="" class="form-control input-sm" placeholder="Enter Student ID" />
                            </div>

                            <div class="form-group">
                                <label for="surname">Surname</label>
                                <input id="surname" name="surname" type="text" value="" class="form-control input-sm" placeholder="Enter Surname" />

                            </div>

                            <div class="form-group">
                                <label for="firstname">First Name</label>
                                <input id="firstname" name="firstname" type="text" value="" class="form-control input-sm" placeholder="Enter First Name" />

                            </div>

                            <div class="form-group">
                                <label for="fullname">Fullname in English</label>
                                <input id="fullname" name="fullname" type="text" value="" class="form-control input-sm" placeholder="Enter Fullname" />

                            </div>
                            <div class="form-group">
                                <label for="fullnamekh">Fullname in Khmer</label>
                                <input id="fullnamekh" name="fullnamekh" type="text" value="" class="form-control input-sm" placeholder="Enter Fullname in Khmer" />

                            </div>

                            <div class="form-group">
                                <label for="studentgender">Gender</label>
                                <select class="form-control input-sm" id="studentgender">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>None</option>
                                </select>
                            </div>

                        </div>

                        <div class="col-md-3">

                            <div class="form-group">
                                <label for="studentdob">Date of Birth</label>
                                <input id="studentdob" name="studentdob" type="date"  value="" class="form-control input-sm" placeholder="Enter Date of Birth" />

                            </div>

                            <div class="form-group">
                                <label for="studentpob">Place of Birth</label>
                                <input id="studentpob" name="studentpob" type="text" value="" class="form-control input-sm" placeholder="Enter Place of Birth" />

                            </div>

                            <div class="form-group">
                                <label for="studentbranchid">Branch</label>
                                <select class="form-control input-sm" id="studentbranchid">
                                    @foreach (var branch in Model.Branchs)
                                    {
                                        <option value=@branch.Id>@branch.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="studentgradeid">Grade</label>
                                <select class="form-control input-sm" id="studentgradeid">
                                    @foreach (var grade in Model.Grades)
                                    {
                                        <option value=@grade.gradeid>@grade.gradename</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="studentshiftid">Shift</label>
                                <select class="form-control input-sm" id="studentshiftid">
                                    @foreach (var shift in Model.Shifts)
                                    {
                                        <option value=@shift.shiftid>@shift.shiftname</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="nationality">Nationality</label>
                                <select class="form-control input-sm" id="nationality">
                                    <option>Khmer</option>
                                    <option>Thai</option>
                                    <option>Vietnam</option>
                                    <option>Chiness</option>
                                    <option>USA</option>
                                </select>
                            </div>

                           
                        </div>

                        <div class="col-md-3">

                            <div class="form-group">
                                <label for="nativelanguage">Native Language</label>
                                <input id="nativelanguage" name="nativelanguage" type="text" value="" class="form-control input-sm" placeholder="Enter Native Language" />

                            </div>
                            <div class="form-group">
                                <label for="otherspoken">Other Spoken Language</label>
                                <input id="otherspoken" name="otherspoken" type="text" value="" class="form-control input-sm" placeholder="Enter Other Spoken Language" />

                            </div>
                            <div class="form-group">
                                <label for="schoolyear">School Year</label>
                                <input id="schoolyear" name="schoolyear" type="text" value="" class="form-control js-date input-sm" placeholder="Enter School Year" />
                            </div>

                            <div class="form-group">
                                <label for="studentstatus">Student Status</label>
                                <input id="studentstatus" name="studentstatus" type="text" value="REGISTER" class="form-control input-sm" placeholder="Enter Student Status" />
                            </div>
                        </div>



                    </div>

                   
                    <hr />
                    <div class="row">
                        <div class="col-md-8 col-lg-offset-4">
                            <button type="button" id="btnStudent" onclick="StudentAction();" class="btn btn-primary btn-block btn-sm">Add New</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>
