
<div class="modal fade" data-backdrop="static" data-keyboard="false" id="RoomItemModal" tabindex="-1" role="dialog" aria-labelledby="RoomItemModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div id="divLoadingModal"></div>
        <div class="modal-content">
            <div class="modal-header clearfix">
                <button type="button" class="btn btn-danger btn-xs pull-right" onclick="OnCloseRoomItem()" data-dismiss="modal">បិទ</button>
                <b class="modal-title" style="color: darkblue;">Room Item</b>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <input id="roomitemid" name="roomitemid" type="text" style="display: none;" disabled="disabled" value="" class="form-control" />
                        <div class="form-group">
                            <label for="rmid">Room</label>
                            <select class="form-control input-sm" id="rmid">
                                @foreach (var room in Model.Rooms)
                                {
                                    <option value=@room.id>@room.room_no</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="itemid">Item</label>
                            <select class="form-control input-sm" id="itemid">
                                @foreach (var item in Model.Items)
                                {
                                    <option value=@item.id>@item.itemname</option>
                                }
                            </select>
                        </div>
                       
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="rprice">Price</label>
                            <input id="rprice" name="rprice" placeholder="$0.00" type="text" value="" class="form-control input-sm" style="min-width: 100%" />
                        </div>
                        <label>&nbsp;</label>
                        <button type="button" id="btnSaveRoomItem" name="btnSaveRoomItem" onclick="RoomItmAction()" class="btn btn-info btn-block btn-sm">Add New</button>
                    </div>
                </div>
                
                <hr />
                <table class="table-hover table-bordered table-condensed table-striped" style="width:100%" id="tblRoomItem">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Room No</th>
                            <th>Item</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>


