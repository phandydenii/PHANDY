    function CheckInAction() {
        var data = {
            roomid: $('#chroomid').val(),
            guestid: $('#guestid').val(),
            child: $('#child').val(),
            man: $('#man').val(),
            women: $('#women').val(),
        };
        $.ajax({
            url: "/api/checkins",
            data: JSON.stringify(data),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                UpdateStatusRoom();
                UpdateStatusGuest();
                InsertPowerUsage(result);
                InsertWaterUsage(result);
                InsertInvoice(result);
                
                toastr.success("Check In successfully.", "Server Response");
                $("#CheckInModal").modal("hide");
                window.location.reload(true);
            },
            error: function (errormesage) {
                toastr.error("This Name Guest is exist in Database", "Server Respond");
                return false;
            }

        });
    }

    function UpdateStatusRoom() {
        $.ajax({
            type: "PUT",
