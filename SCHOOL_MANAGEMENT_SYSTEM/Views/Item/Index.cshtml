
@{
    ViewBag.Title = "Manage Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h4 style="color: darkblue;"><b>@Resources.Content.ManageItem</b></h4>
        </div>
        <div class="col-md-6">
            <a href="#" class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#ItemModal" style="margin-right:5px;"><span class="glyphicon glyphicon-plus"></span> @Resources.Content.AddItem</a>
        </div>
    </div>
    <hr />
    <table class="table-hover table-bordered table-condensed table-striped" style="width:100%" id="tableItem">
        <thead>
            <tr>
                <th>@Resources.Content.No</th>
                <th>@Resources.Content.Name</th>
                <th>@Resources.Content.NameKh</th>
                <th>@Resources.Content.Price</th>
                <th>@Resources.Content.Note</th>
                <th>@Resources.Content.Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Html.Partial("_Item")

@section scripts{
    @Scripts.Render("~/Scripts/Functions/item.js")
    @Scripts.Render("~/Scripts/moment.min.js")
}


