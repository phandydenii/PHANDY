
@{
    ViewBag.Title = "Manage PaymentMethod";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="loadingGif"></div>

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            @*<button class="btn btn-primary btn-sm" onclick="sendMsgTelegram();">Send Telegram Message Testing</button>*@

            <button onclick="ClickAddnewPaymentMethod()" class="btn-success btn-xs pull-right" type="button" data-toggle="modal" data-target="#PaymentMethodModel" style="margin-right:5px;"><span class="glyphicon glyphicon-plus-sign"></span> បង្កើតវិធីបង់ប្រាក់</button>
