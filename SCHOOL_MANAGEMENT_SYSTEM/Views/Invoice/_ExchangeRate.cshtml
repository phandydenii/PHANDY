
<div class="modal fade" data-backdrop="static" data-keyboard="false" id="exchangeModel" tabindex="-1" role="dialog" aria-labelledby="exchangeModel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="LoadingGif"></div>
            <div class="modal-header">
                <button type="button" class="btn btn-danger btn-xs pull-right" data-dismiss="modal" aria-hidden="true">
                    <span class="glyphicon glyphicon-remove"></span>
</button>
                <h4 class="modal-title text-center" style="color: darkblue"><b>@Resources.Content.ManageExchaneRate</b></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <input type="text" hidden value="" />
                        <div class="form-group">
                            <label for="rate">Rate</label>
                            <input id="rateid" name="rateid" type="text" value="" class="form-control input-sm hidden" />
                            <input id="rate" name="rate" type="number" value="0" class="form-control input-sm" placeholder="Enter Rate's Price'" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" id="btnRate" onclick="RateAction();" class="btn btn-primary btn-block btn-sm">Add New</button>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <table id="tableRate" class="table table-hover table-bordered table-condensed table-striped" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Date</th>
                                    <th>Rate</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>