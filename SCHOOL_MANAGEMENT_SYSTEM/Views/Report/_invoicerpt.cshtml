@using ReportViewerForMvc;
@{
    ViewBag.Title = "_invoicerpt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div id="" class="col-md-12">
            <button class="btn btn-danger btn-sm" onclick="Cancel()">Cancel</button>
            <button class="btn btn-success btn-sm" onclick="Print()">Print</button>
            <br />
            @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { @style = "width: 100%; height: 100%" })
        </div>
    </div>

<script>
    function Print() {
        //alert('hi');
        window.print();
    }
</script>

