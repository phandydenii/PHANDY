<form id="employees" method="post" enctype="multipart/form-data">

    <div class="modal fade" data-backdrop="static" data-keyboard="fale" id="registerModel" tabindex="-1" role="dialog" aria-labelledby="registerModel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div id="loadingGif"></div>
                <div class="modal-header">
                    <button type="button" class="btn-danger btn-xs pull-right" data-dismiss="modal" aria-hidden="true">Close</button>
                    <b class="modal-title" style="color:darkblue">Manage Register</b>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" hidden value="" />
                            <input id="id" name="id" type="text" value="" class="form-control input-sm hidden" placeholder="Enter Id" />
                            <input id="userid" name="userid" type="text" value="" class="form-control input-sm hidden" placeholder="Enter Id" />

                            <div class="form-group">
                                <label for="registerid">Register ID</label>
                                <input id="registerid" name="registerid" type="text" value="" class="form-control input-sm hidden" placeholder="Enter Register ID" />
                                <input id="regid" name="regid" type="text" value="" class="form-control input-sm" placeholder="Enter Register ID" />

                            </div>

                            <div class="form-group">
                                <label for="date">Register Date</label>
                                <input id="date" name="date" type="date" value="" class="form-control input-sm" placeholder="Enter Register Date" />

                            </div>
                            <div class="form-group">
                                <label for="studentid">Student</label>
                                <select class="form-control input-sm selectpicker"  id="studentid" data-style = "btn-dark"  data-hide-disabled = "true" data-live-search = "true"> 
                                    @foreach (var stu in Model.students)
                                    {
                                        <option value=@stu.id>@stu.fullnamekh</option>
                                    }
                                </select>
                                 

                            </div>
                            <div class="form-group">
                                <label for="languageid">Laguage</label>
                                <select class="form-control input-sm " id="languageid" >
                                    @foreach (var lan in Model.studylanguages)
                                    {
                                        <option value=@lan.studylanguageid>@lan.language</option>
                                    }
                                </select>
                            </div>
                            

                            

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="shiftid">Shift</label>
                                <select class="form-control input-sm " id="shiftid" >
                                    @foreach (var shift in Model.shifts)
                                    {
                                        <option value=@shift.shiftid>@shift.shiftname</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="periodid">Period</label>
                                    <select class="form-control input-sm " id="periodid" >
                                        @foreach (var per in Model.studyperiods)
                                        {
                                            <option value=@per.studyperiodid>@per.period</option>
                                        }
                                    </select>
                            </div>

                            <div class="form-group">
                                <label for="gradeid">Grade</label>
                                <select class="form-control input-sm" id="gradeid">
                                
                                        @foreach (var per in Model.grads)
                                        {
                                            <option value=@per.gradeid>@per.gradename</option>
                                        }
                                    </select>
                            </div>
                            <div class="form-group">
                                <label for="status">Stutus</label>
                                <select class="form-control input-sm" id="status">
                                    <option>REGISTER</option>
                                    <option>SUSPEND</option>
                                    <option>QUIT</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <img class="center img-responsive img-thumbnail hidden" id="registerfile" src="~/Images/no_image.png" />
                            </div>
                            <div class="form-group">
                                <label>Upload Photo</label>
                                <input onchange="readURL(this);" type="file" id="filereg" accept=".pdf" style="width:100%;" />
                                <input type="hidden" value="" id="file_old" />
                            </div>


                        </div> 
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-8 col-lg-offset-4">
                            <button type="button" id="btnRegister" onclick="registerAction();" class="btn btn-primary btn-block btn-sm">Add New</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>

