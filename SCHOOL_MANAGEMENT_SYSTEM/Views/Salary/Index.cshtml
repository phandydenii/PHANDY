
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h4 style="color: darkblue;">@Resources.Content.Salary</h4>
        </div>
        <div class="col-md-6">
            <a href="#" class="btn btn-success btn-sm pull-right" onclick="AddSalary()" style="margin-right:5px;"><span class="glyphicon glyphicon-cog"></span> @Resources.Content.AddNew</a>
            @*<a href="#" class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#PositionModal" style="margin-right:5px;"><span class="glyphicon glyphicon-plus-sign"></span> គ្រប់គ្រងតួនាទី</a>*@
        </div>
    </div>
    <hr />
    <table class="table-hover table-bordered table-condensed table-striped" style="width:100%" id="tableSalary">
        <thead>
            <tr>
                <th>@Resources.Content.No</th>
                <th>@Resources.Content.Name</th>
                <th>@Resources.Content.NameKh</th>
                <th>@Resources.Content.Salary</th>
                <th>@Resources.Content.Status</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Html.Partial("_CreateStaffSalary")

@section scripts{
    @Scripts.Render("~/Scripts/Functions/salary.js")
