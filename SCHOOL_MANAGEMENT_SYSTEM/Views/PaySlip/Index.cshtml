@*@model IEnumerable<SCHOOL_MANAGEMENT_SYSTEM.Models.PaySlip>*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h4 style="color: darkblue;">គ្រប់គ្រងប្រាក់ខែបុគ្គលិក</h4>
        </div>
        <div class="col-md-6">
            <a href="#" class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#PaySlipModal" style="margin-right:5px;"><span class="glyphicon glyphicon-usd"></span> @Resources.Content.PaySlip</a>
        </div>
    </div>
    <table class="table-hover table-bordered table-condensed table-striped" style="width:100%" id="TablePaySlip">
        <thead>
            <tr>
                <th>លេខ</th>
                <th>កាលបរិច្ឆេទ</th>
                <th>ឈ្មោះ</th>
                <th>ឈ្មោះជាភាសាខ្មែរ</th>
                <th>ប្រាក់ខែ</th>
                <th>ពន្ធ</th>
                <th>ពិន៍យ</th>
                <th>ប្រាក់លើកទឹកចិត្ត</th>
                <th>សរុបប្រាក់ខែ</th>
                <th>ចំណាំ</th>
                <th>ស្ថានភាព</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Html.Partial("_Create")

@section scripts{
    @Scripts.Render("~/Scripts/Functions/payslip.js")
    @Scripts.Render("~/Scripts/moment.min.js")
}
